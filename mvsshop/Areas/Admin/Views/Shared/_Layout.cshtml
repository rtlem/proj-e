<!DOCTYPE
<html lang="tr">
<head>
    <title> @ViewBag.Title - MWS Shope Admin</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head> 
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">Shop <span class="text-secondary"><span>ADMIN</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"asp-controller="Categories" asp-action="Index" ><i class="bi bi-collection-fill"></i>Kategoriler</a>
                    </li>   
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Productus" asp-action="Index"><i class="bi bi-bag"></i>Ürünler</a>
                    </li>
                   
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
  
    <main class="container">
    @RenderBody()
        <main>
            <footer class="container bg-body-secondary py-4">
                </footer>   

<script src="~/lib/jqery/jqery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
@RenderSelection("scripts", false)
</body>
</html>
